            //alert('Row ' + (i + 1) + ':\nId: ' + MedicineName
            //    + '\nProduct: ' + Dosage
            //    + '\nQuantity: ' + Quantity);
            data.push({ MName: MedicineName, dosage: Dosage, quantity: Quantity, time: Time });
            
        });
